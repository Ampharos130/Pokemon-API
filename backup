
//variables
let pokeUrl =`https://pokeapi.co/api/v2/pokemon?limit=151`;
let totalPokemon  // global variable


//element references
const $button = $(`button`);
const $input = $(`input[type="text"]`);


// event listeners
$button.on(`click`, handleGetData);
startup(); // on start up of the page a array of all 151 pokemon is loaded


//functions
// load the data

function startup(){
    
    $.ajax(pokeUrl).then(
        function (data){
            let totalPokemon = data
            console.log(totalPokemon)
        },
        function (error) {
            console.log(`something went wrong`);
            console.log(error);
        }
    );
}

